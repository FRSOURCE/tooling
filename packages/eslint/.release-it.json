{
  "plugins": {
    "@release-it/conventional-changelog": {
        "gitRawCommitsOpts": {
            "path": "packages/library-a"
        }
    },
    "@release-it/bumper": {
      "in": "version.json",
      "out": ["version.json", "dist/**/package.json"]
    }
  },
  "hooks": {
    "before:bump": "npm run build",
    "after:bump": [
      "git checkout -- package.json", // check out package.json
      "git checkout -- package-lock.json", // check out package-lock.json
    ]
  }
}
